@{
    ViewData["Title"] = "Panel de Ventas";
}
<style>
    .card-carousel {
        min-height: 400px;
    }

    .carousel-item {
        height: 100%;
    }
</style>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h3 class="fw-bold text-white">Panel de Ventas</h3>
            <p class="text-muted">Bienvenido al sistema de microfinanzas</p>
        </div>
    </div>
    
    <!-- Sección de Acciones Rápidas -->
    <div class="row mt-4 mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-transparent pb-0">
                    <h6 class="fw-bold">Acciones Rápidas</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Customers" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="ni ni-single-02 me-1"></i> Ver Todos los Clientes
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Loans" asp-action="Index" class="btn btn-outline-danger w-100">
                                <i class="ni ni-paper-diploma me-1"></i> Ver Todos los Préstamos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carrusel de Mensajes Motivacionales -->
    <div class="row ">
        <div class="col-12">
            <div class="card card-carousel overflow-hidden h-100 p-0 border-0 shadow-lg rounded-4">
                <div id="motivationalCarousel" class="carousel slide h-100" data-bs-ride="carousel">
                    <div class="carousel-inner border-radius-lg h-100">
                        <!-- Mensaje 1 -->
                        <div class="carousel-item h-100 active" style="background-image: url('/img/carousel-1.jpg'); background-size: cover; background-position: center;">
                            <div class="carousel-caption d-flex flex-column justify-content-center h-100 text-center">
                                <h3 class="text-white mb-2">¡Top Vendedor!</h3>
                                <p class="text-white opacity-8">Estás entre los mejores asesores este mes.</p>
                                
                            </div>
                        </div>
                        
                        <!-- Mensaje 2 -->
                        <div class="carousel-item h-100" style="background-image: url('/img/carousel-2.jpg'); background-size: cover; background-position: center;">
                            <div class="carousel-caption d-flex flex-column justify-content-center h-100 text-center">
                                <h3 class="text-white mb-2">Meta del Mes</h3>
                                <p class="text-white opacity-8">Vas al 75% de tu objetivo. ¡Sigue así!</p>
                                <div class="progress mt-3 mx-auto" style="width: 70%; height: 6px;">
                                    
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%;"></div>
                                    <div class="progress-bar bg-white" role="progressbar" style="width: 75%;"></div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Mensaje 3 -->
                        <div class="carousel-item h-100" style="background-image: url('/img/carousel-3.jpg'); background-size: cover; background-position: center;">
                            <div class="carousel-caption d-flex flex-column justify-content-center h-100 text-center">
                                <h3 class="text-white mb-2">¡Tu trabajo transforma vidas!</h3>
                                <p class="text-white opacity-8">Cada préstamo que gestionas ayuda a pequeños emprendedores a crecer.</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#motivationalCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#motivationalCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    
</div>