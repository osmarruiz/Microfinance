      <a class="nav-link sidenav-custom text-dark p-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <span class="fs-6" id="dynamicGreeting"></span> <span class="text-bold">@User.Identity?.Name</span>
